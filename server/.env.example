# Runtime
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/auto_entrepreneur_dashboard
# Enforce TLS for Mongo (set true in production deployments)
MONGO_TLS_REQUIRED=false
# Optional file paths (absolute or relative to repo root) for custom CA / certs
MONGO_TLS_CA_FILE=
MONGO_TLS_CERT_KEY_FILE=

# Security
JWT_SECRET=change-me-to-a-long-random-string-at-least-32-chars
COOKIE_SECRET=change-me-cookie-secret
CSRF_SECRET=change-me-csrf-secret
# Cookies (optional overrides)
# In production behind TLS, set COOKIE_SECURE=true to ensure Secure cookies
# SameSite options: 'lax' (default) or 'none' (only if you need cross-site cookies)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
# CSRF cookie options mirror the cookie values above
CSRF_SECURE=false
CSRF_SAMESITE=lax

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:5173

# Auth (optional; required if Google OAuth is enabled)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

FILES_BUCKET=invoices

# Request hardening
REQUEST_PATH_MAX_LENGTH=2048

# Seeding helpers
# Optional password used by scripts/seed-invoices.ts when creating a seed user.
# If unset, a strong random password is generated per run and logged to the console.
SEED_USER_PASSWORD=